################### MULTI SCREEN ######################
 
 
# setting variables for later use
# use xrandr and/or arandr to know the names of your monitors
# use this line to tell which monitor is on the right

# exec_always --no-startup-id $I3_HOME/scripts/multiscreen.sh
exec_always --no-startup-id ~/.screenlayout/triple_screen.sh

bindsym $mod+m mode "$monitor"

set $monitor Monitor mode (S) Single, (2) Dual, (3) Triple

mode "$monitor" {
    bindsym S mode "$monitor/single"
    bindsym 2 mode "$monitor/dual"
    bindsym 3 mode "$monitor/triple"
    bindsym Escape mode "default"
}

mode "$monitor/single" {
    set $monitor/single Single screen layout activated (Return) OK
    # TP screen/adaptor names
    set $laptopMonitor eDP-1
    set $firstMonitor eDP-1
    set $secondMonitor eDP-1

    bindsym Return exec "xrandr --auto";\
        restart;\
        mode "default"
    bindsym Escape mode "default"
}

mode "$monitor/dual" {
    set $monitor/dual dual screen layout activated (Return) OK
    # TP screen/adaptor names
    set $laptopMonitor eDP-1
    set $firstMonitor DP-1-2
    set $secondMonitor DP-1-2

    bindsym Return exec "$I3_HOME/screens/lh-home.sh";\
        restart;\
        mode "default"

    bindsym Escape mode "default"
}

mode "$monitor/triple" {
    set $monitor/triple triple screen layout activated (Return) OK
    # MBP screen/adaptor names
    set $laptopMonitor eDP-1
    set $secondMonitor DP-2
    set $firstMonitor HDMI-1
    bindsym Return exec "~/.screenlayout/triplescreen.sh";\
        restart;\
        mode "default"

    bindsym Escape mode "default"
}


