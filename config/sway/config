################### LOCK ######################
  
set $lock swaylock -c 222222 --clock --indicator --datestr "%a %e.%m.%Y" --timestr "%k:%M"
exec swayidle -w \
    timeout 600 $lock \
    timeout 570 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    before-sleep $locks

set $lockman exec bash ~/.config/sway/lockman.sh
#bindsym $mod+l exec $lockman

 
set $mode_system System (l) locks, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec bash ~/.config/sway/lockman.sh, mode "default"
    bindsym e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit', mode "default"
    #bindsym s exec --no-startup-id $I3_HOME/scripts/i3exit.sh suspend, mode "default"
    #bindsym h exec --no-startup-id $I3_HOME/scripts/i3exit.sh hibernate, mode "default"
    bindsym r exec systemctl reboot --firmware-setup, mode "default"
    bindsym Shift+s exec systemctl poweroff -i, mode "default"
 
    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

#bindsym $mod+Pause mode "$mode_system"
bindsym $mod+l mode "$mode_system"
  
